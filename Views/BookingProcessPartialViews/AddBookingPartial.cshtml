                    </div>

                </div>
                
                
                <div class="row-fluid">
                    <div class="span4">
                        <label for="FlightArrivalTime"><css-decorator class="toTranslate">Flight Arrival Time</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightArrivalTime" name="bookings[@i].FlightArrivalTime" class="span12" />
                    </div>
                    
                    <div class="span4">
                        <label for="FlightArrivalTime"><css-decorator class="toTranslate">Flight Arrival Date</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightArrivalDate" name="bookings[@i].FlightArrivalDate" class="span12 date-picker" />
                    </div>

                    <div class="span4">
                        <label for="FlightDepartureTime"><css-decorator class="toTranslate">Inbound Flight Number</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightNumberArrival" name="bookings[@i].FlightNumberArrival" class="span12" />
                    </div>
                </div>
                
                
                <div class="row-fluid">
                    <div class="span4">
                        <label for="FlightArrivalTime"><css-decorator class="toTranslate">Flight Departure Time</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightDepartureTime" name="bookings[@i].FlightDepartureTime" class="span12" />
                    </div>

                    <div class="span4">
                        <label for="FlightArrivalTime"><css-decorator class="toTranslate">Flight Departure Date</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightDepartureDate" name="bookings[@i].FlightDepartureDate" class="span12 date-picker" />
                    </div>

                    <div class="span4">
                        <label for="FlightDepartureTime"><css-decorator class="toTranslate">Outbound Flight Number</css-decorator></label>
                        <input type="text" id="bookings[@i].FlightNumberDeparture" name="bookings[@i].FlightNumberDeparture" class="span12" />
                    </div>
                </div>
                

                <div class="row-fluid">

                        <div class="editor-field span12">
                            <label><css-decorator class="toTranslate">Any Special Request or Comments</css-decorator></label>
                            <textarea rows="8" name="bookings[@i].SpecialRequests" class="span12" id="bookings[@i].SpecialRequests"></textarea>
                            @Html.ValidationMessageFor(model => Model.SpecialRequests)
                        </div>

                    </div>




                    <label for="AcceptTC" class="checkbox span12" style="margin-bottom: 0;">
                        <span class="icons">
                            <span class="first-icon fui-checkbox-unchecked"></span>
                            <span class="second-icon fui-checkbox-checked"></span>
                        </span>
                        <input type="checkbox" id="AcceptTC" name="bookings[@i].AcceptTC" class="makeValid" required>
                        Accept <a href="#" style="text-decoration: underline;"><css-decorator class="toTranslate">Terms & Conditions</css-decorator></a>
                    </label>


                </div>



        </div>


    </fieldset>




    <script>
        $(document).ready(function () {
            $(".adults").val("@Model.NumberOfAdults");
            $(".children").val("@Model.NumberOfChildren");
            $(".infants").val("@Model.NumberOfInfants");

            $(".linen").val("@Model.ExtraLininSet");
            $(".cleans").val("@Model.MidVactionCleaning");
            $(".swimmingheating").val("@Model.SwimmingPoolHeating");
            $(".towels").val("@Model.NoOfTowelsRequested");
            $(".heating").val("@Model.HeatingNoNights");

        });
    </script>


