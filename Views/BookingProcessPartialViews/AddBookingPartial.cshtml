    ViewBag.booking = (Booking)Session["CurrentBookingDataGathering"];
    ViewBag.Booking = (Booking)Session["CurrentBookingDataGathering"];*/

    int i = 0;

    var StepNo = (int)ViewData["StepNo"];
    var bookingCount = (int)ViewData["bookingCount"];
    var loopNo = (int)ViewData["loopNo"];
    i = bookingCount;

    string divID = "bookingDiv" + loopNo.ToString();

    <fieldset>
        <legend><css-decorator class="toTranslate">Booking for: @Model.Property.LegacyReference - @Model.Property.HouseName</css-decorator></legend>
        <input type="hidden" value="@StepNo" name="bookings[@i].StepNo" />
        <input type="hidden" readonly="true" name="bookings[@i].PropertyID" value="@Model.PropertyID" />
        
        <input type="hidden" readonly="true" name="bookings[@i].BookingPrice" value="@Model.BookingPrice" />
        
        <input type="hidden" readonly="true" name="bookings[@i].BookingCurrencyConversionPrice" value="@Model.BookingCurrencyConversionPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].BookingCurrencyConversionSymbol" value="@Model.BookingCurrencyConversionSymbol" />
        <input type="hidden" readonly="true" name="bookings[@i].BookingPreferredCurrency" value="@Model.BookingPreferredCurrency" />
        
        
        <input type="hidden" readonly="true" name="bookings[@i].CleaningPostVisitPrice" value="@Model.CleaningPostVisitPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].ExtraLininSetPrice" value="@Model.ExtraLininSetPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].HeatingPrice" value="@Model.HeatingPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].MidVactionCleaningPrice" value="@Model.MidVactionCleaningPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].SwimmingPoolHeatingPrice" value="@Model.SwimmingPoolHeatingPrice" />
        <input type="hidden" readonly="true" name="bookings[@i].TowelsPrice" value="@Model.TowelsPrice" />




        <div class="row-fluid">
            <div class="span12 lightGrey" id="@divID">
                <b><css-decorator class="toTranslate">Please enter details for your booking</css-decorator></b>
                <div class="row-fluid">

                    <div class="span3">
                        <label><css-decorator class="toTranslate">Booking Start Date</css-decorator></label>
                        <div class="editor-field">
                            <input type="text" readonly="true" class="span12 makeValid" name="bookings[@i].StartDate" value="@Convert.ToDateTime(Model.StartDate).ToString("dd/MM/yyyy")" required />
                            @Html.ValidationMessageFor(model => Model.StartDate)
                        </div>
                    </div>

                    
                    <div class="span3">
                        <label><css-decorator class="toTranslate">Booking End Date</css-decorator></label>
                        <input type="text" readonly="true" class=" span12 makeValid" name="bookings[@i].EndDate" value="@Convert.ToDateTime(Model.EndDate).ToString("dd/MM/yyyy")" required />
                        @Html.ValidationMessageFor(model => Model.EndDate)
                    </div>


                    <div class="span3">
                        <label><css-decorator class="toTranslate">Number Of Nights</css-decorator></label>
                        <input type="text" readonly="true" class="span12" name="bookings[@i].NumberOfNights" id="bookings[@i].NumberOfNights" value="@Model.NumberOfNights" />
                        @Html.ValidationMessageFor(model => Model.NumberOfNights)
                    </div>



                    <div class="span3">
                        <label><css-decorator class="toTranslate">Property Reference</css-decorator></label>
                        <input type="text" readonly="true" class="span12" name="bookings[@i].bookingprcreference" id="bookings[@i].BookingPRCReference" value="@Model.BookingPRCReference" />
                    </div>


                </div>



                <div class="row-fluid">

                    <div class="span3">
                        <label><css-decorator class="toTranslate">Number of Adults</css-decorator></label>
