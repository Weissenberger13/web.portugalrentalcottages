@model IEnumerable<BootstrapVillas.Models.PropertyPricingSeasonalInstance>

@{
    ViewBag.Title = "SinglePropertyPricingIndex";

    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "BottomEditorWindow",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "spinner"
    };

    AjaxOptions deleteOptions = new AjaxOptions
    {
        UpdateTargetId = "BottomEditorWindow",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "spinner",
        Confirm = "Are you sure you want to delete this?"
    };




}

<h2>Index</h2>


@Ajax.ActionLink("Create New", "Create", "PropertyPricingSeasonalInstance", options, new { id = "createButton", style = "" })
<table id="example" class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.PropertyPricingSeason.Season_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.LegacyReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyPricingSeason.Season_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Property.LegacyReference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                <td>
                    @Ajax.ActionLink("Edit", "Edit", "PropertyPricingSeasonalInstance", new { id = item.PropertyPricingSeasonalInstanceID }, options) |
                    @Ajax.ActionLink("Delete", "Delete", "PropertyPricingSeasonalInstance", new { id = item.PropertyPricingSeasonalInstanceID }, deleteOptions)
                </td>

                
            </tr>
        }
    </tbody>

</table>


<script type="text/javascript">
    $(document).ready(function () {


        $('#example').DataTable();
        $('#BottomEditorWindow').hide();
        $('#TopEditorWindow').animate({ height: '100%' }, 500);


    });
</script>
