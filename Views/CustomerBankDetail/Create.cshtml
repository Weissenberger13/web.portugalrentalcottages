            @Html.ValidationMessageFor(model => model.CustomerID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SortCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SortCode)
