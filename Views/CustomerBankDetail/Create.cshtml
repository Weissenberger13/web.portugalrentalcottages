@model BootstrapVillas.Models.CustomerBankDetail

@{
    ViewBag.Title = "Create";

    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "BottomEditorWindow",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "spinner",
        OnSuccess = "alert('Created!');",
        OnFailure = "alert('Creation Failed!');",

    };

    var customerID = (long)ViewBag.CustomerID;
    
}

<h2>Create</h2>

@using (Ajax.BeginForm("Create", "CustomerBankDetail", options)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CustomerBankDetail</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameOnAccount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameOnAccount)
            @Html.ValidationMessageFor(model => model.NameOnAccount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IBAN)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IBAN)
            @Html.ValidationMessageFor(model => model.IBAN)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SwiftCode_BIC)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SwiftCode_BIC)
            @Html.ValidationMessageFor(model => model.SwiftCode_BIC)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BankName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BankName)
            @Html.ValidationMessageFor(model => model.BankName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BankAddressLine1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BankAddressLine1)
            @Html.ValidationMessageFor(model => model.BankAddressLine1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BankAddressLine2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BankAddressLine2)
