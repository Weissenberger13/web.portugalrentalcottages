@model BootstrapVillas.Models.BookingExtraAttribute

@{
    ViewBag.Title = "Edit";


    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "BottomEditorWindow",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "spinner",

    };
    
}

<h2>Edit</h2>

