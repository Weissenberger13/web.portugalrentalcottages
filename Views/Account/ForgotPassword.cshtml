@model string

<h3>Forgot Your Password?</h3>


<div class="row-fluid padded">
    <div class="span10 offset1 whiteBg" style="position: relative;">
        <div class="row-fluid">
            <!-- Page Title -->
            <h4><i class="fa fa-fw fa-user"></i><css-decorator class="toTranslate">Forgot Your Password?</css-decorator></h4>
            <br />
            <!-- Begin Form -->
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "aFormToValidate", id = "forgotpasswordform" }))
            {
                @Html.ValidationSummary(true)
                <div class="row-fluid">
                    <div class="span12 lightGrey">
                        <!-- Section title -->
                        <b>Your email address:</b>
                        <div class="row-fluid">
                            <label for="LastName"><css-decorator class="toTranslate">Email address</label>
                            <input type="email" name="Email" id="Email" class="span12 LastName makeValid" required>
                            <button type="submit" class="button-primary">Submit</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

