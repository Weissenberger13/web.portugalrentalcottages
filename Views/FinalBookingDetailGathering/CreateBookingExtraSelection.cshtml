                                        <div class="span6">
                                            <label for="FlightArrival">Date Of Tour</label>
                                            <input type="text" name="ExtraRentalDate" class="span12 date-picker FlightArrival" />
                                        </div>
                                        <!--/span-->

                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <label>Pick Up Location / Address</label>
                                            @*same ids as other modals *@
                                            <textarea rows="3" name="PickupLocation"></textarea>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <label>Drop Off Location / Address</label>
                                            @*same ids as other modals *@
                                            <textarea rows="3" name="DropoffLocation"></textarea>
                                        </div>
                                        <!--/span-->
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span6">
                                            <label>Passengers - Adults</label>
                                            @*same ids as other modals *@
                                            <select name="NumberOfAdults">
                                                @{
                            for (var i = 1; i < 16; i++)
                            { <option value=@i.ToString()>@i</option>}
                                                }

                                            </select>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <label>Passengers - Children</label>
                                            @*same ids as other modals *@
                                            <select name="NumberOfChildren">
                                                @{
                            for (var i = 0; i < 16; i++)
                            {
                                                    <option value=@i.ToString()>@i</option>}
                                                }
                                            </select>
                                        </div>
                                        <!--/span-->
                                    </div>


                                    <div class="row-fluid">
                                        <div class="span6">

                                            <label>Passengers - Infants</label>
                                            @*same ids as other modals *@
                                            <select name="NumberOfInfants">
                                                @{
                            for (var i = 0; i < 16; i++)
                            { <option value=@i.ToString()>@i</option>}
                                                }

                                            </select>

                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <label>Number of Child seats - £10 per seat</label>
                                            @*same ids as other modals *@
                                            <select name="NumberOfChildseats">
                                                @{
                            for (var i = 0; i < 6; i++)
                            { <option value=@i.ToString()>@i</option>}
                                                }

                                            </select>

                                        </div>
                                        <!--/span-->
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span6">
                                            <label>Any special requests or comments</label>
                                            @*same ids as other modals *@
                                            <textarea rows="5" name="SpecialRequests"></textarea>
                                        </div>
                                        <!--/span-->

                                    </div>

                                </div>
                                <!--/span12-->
                            </div>
              
                           
                            
                            <div class="row-fluid">
                                <input type="submit" class="btn btn-info span12" name="submitBookingExtraPart" value="Submit" />
                            </div>



                        }



                    </div>
                </div>


            </div>
        </div>
    </fieldset>


}




