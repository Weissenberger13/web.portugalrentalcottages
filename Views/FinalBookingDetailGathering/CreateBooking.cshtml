
@model BootstrapVillas.Models.Booking
@using BootstrapVillas.Models;

@{
    ViewBag.Title = "CreateBooking";
    Booking currentBooking = (Booking)Session["CurrentBookingDataGathering"];
    ViewBag.booking = (Booking)Session["CurrentBookingDataGathering"];
    ViewBag.Booking = (Booking)Session["CurrentBookingDataGathering"];
}


@using (Html.BeginForm("CreateBooking", "FinalBookingDetailGathering", FormMethod.Post, new { @class = "aFormToValidate" }))
{
    @Html.ValidationSummary(true)
    
     <div class="editor-field">
                @Html.EditorFor(model => model.BookingPRCReference)
                @Html.ValidationMessageFor(model => model.BookingPRCReference)
            </div>
    
    <div class="row-fluid">
        <div class="span7 offset1 whiteBg" style="position: relative;">
            <div class="row-fluid">
                <!-- Page Title -->
                <h4><i class="fa fa-fw fa-check"></i>Booking Confirmation - Property Booking</h4>
                <br />


                <!--/Main row-->
                <!-- Property Details -->
                <div class="row-fluid">
                    <div class="span12 lightGrey">
                        <b>Please enter details for your booking</b>

                        <div class="row-fluid">

                            <div class="span4">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.StartDate)
                                </div>
                                <div class="editor-field">
                                    <input type="text" readonly="true" class="date-picker makeValid" name="StartDate" value="@currentBooking.StartDate" />
                                    @Html.ValidationMessageFor(model => model.StartDate)
                                </div>
                            </div>


                            <div class="span4">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.EndDate)
                                </div>
                                <div class="editor-field">
                                    <input type="text" readonly="true" class="date-picker makeValid " name="EndDate" value="@currentBooking.EndDate" />
                                    @Html.ValidationMessageFor(model => model.EndDate)
                                </div>
                            </div>


                            <div class="span4">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.NumberOfNights)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.NumberOfNights)
                                    @Html.ValidationMessageFor(model => model.NumberOfNights)
                                </div>
                            </div>
                        </div>

                        <div class="row-fluid">
                            <div class="span4">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.BookingPRCReference)
                                </div>
                                <div class="editor-field">
                                    <input type="text" readonly="true" id="BookingPRCReference" name="BookingPRCReference" value="@currentBooking.BookingPRCReference" />                                   
                                </div>
                            </div>
                        </div>


                        <div class="row-fluid">
                            <label>Number of People</label>
                            <select name="NumberOfAdults" id="NumberOfAdults" class="span4 Adults makeValid">
                                <option value="">- Adults -</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                            </select>
                            <select name="NumberOfChildren" id="NumberOfChildren" class="span4 Children makeValid">
                                <option value="">- Children (2+ Yrs)- </option>
                                <option>0</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                            </select>
                            <select name="NumberOfInfants" id="NumberOfInfants" class="span4 Infants makeValid">
                                <option value="">- Infants (0-2 Yrs) -</option>
                                <option>0</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                            </select>
                        </div>

                    
                


                <div class="row-fluid">

                    <div class="editor-field span 4">
                        @Html.LabelFor(model => model.MidVactionCleaning)
                        @Html.EditorFor(model => model.MidVactionCleaning)
                        @Html.ValidationMessageFor(model => model.MidVactionCleaning)
                    </div>


                    <div class="editor-field span 4">
                        @Html.LabelFor(model => model.NoOfTowelsRequested)
                        @Html.EditorFor(model => model.NoOfTowelsRequested)
                        @Html.ValidationMessageFor(model => model.NoOfTowelsRequested)
                    </div>

                    <div class="editor-field span 4">
                        @Html.LabelFor(model => model.SwimmingPoolHeating)
                        @Html.EditorFor(model => model.SwimmingPoolHeating)
                        @Html.ValidationMessageFor(model => model.SwimmingPoolHeating)
                    </div>


                </div>


                <div class="row-fluid">

                    <div class="editor-field span 12">
                        @Html.LabelFor(model => model.SpecialRequests)
                        @Html.EditorFor(model => model.SpecialRequests)
                        @Html.ValidationMessageFor(model => model.SpecialRequests)
                    </div>

                </div>



                <p>
                    <input type="submit" value="Create" />
                </p>


                        </div>
                    </div>

            </div>
        </div>
    </div>
    
}

@{Html.EndForm();}


